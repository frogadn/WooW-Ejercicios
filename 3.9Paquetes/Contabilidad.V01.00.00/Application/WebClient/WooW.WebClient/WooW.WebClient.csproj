    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="WooW.Model.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>WooW.Model.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

