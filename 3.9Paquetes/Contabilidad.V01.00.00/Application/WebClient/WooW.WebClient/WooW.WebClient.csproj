  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net8.0|AnyCPU'">
    <DefineConstants>$(DefineConstants);WEBCLIENT</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Script\**" />
